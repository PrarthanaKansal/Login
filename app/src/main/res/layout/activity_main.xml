<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:inputType="text"
        android:hint="First Name"
        style="@style/Base.V7.Widget.AppCompat.EditText"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:inputType="text"
        android:id="@+id/secondName"
        android:layout_below="@id/firstName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:layout_below="@id/secondName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="text"
        android:id="@+id/pass"
        android:layout_below="@id/email"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile No."
        android:inputType="phone"
        android:id="@+id/mobile"
        android:layout_below="@id/pass"
        />
    <ListPreference
        android:key="Branch"
        android:entries="@array/source_labels"
        android:entryValues="@array/source_values"
        android:defaultValue="EEE"
        android:title="Branch"
        android:dialogTitle="Select your Branch"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:text="Proceed TO REGISTER"
        android:layout_centerHorizontal="true"
        android:id="@+id/register"/>



</RelativeLayout>